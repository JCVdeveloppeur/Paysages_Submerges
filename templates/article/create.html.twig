{% extends 'base.html.twig' %}

{% block title %}Cr√©er un nouvel article{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4 text-center">üìù Cr√©er un nouvel article</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

                <div class="mb-3">
                    {{ form_label(form.titre) }}
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.titre) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.categorie) }}
                    {{ form_widget(form.categorie, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.categorie) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.chapeau) }}
                    {{ form_widget(form.chapeau, {
                    attr: { class: 'form-control autogrow', rows: 4, maxlength: 300, placeholder: 'Un court r√©sum√© accrocheur‚Ä¶' }
                    }) }}
                    {{ form_errors(form.chapeau) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.contenu) }}
                    {{ form_widget(form.contenu, {
                    attr: { class: 'form-control autogrow', rows: 15 }
                    }) }}
                    {{ form_errors(form.contenu) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.image) }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.image) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.datePublication) }}
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                        {{ form_widget(form.datePublication, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    {{ form_errors(form.datePublication) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.statut) }}
                    {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.statut) }}
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_articles') }}" class="btn btn-secondary">
                        ‚Üê Retour √† la liste
                    </a>
                    <button type="submit" class="btn btn-success">
                        ‚ûï Cr√©er l'article
                    </button>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('article_edit') }}
{% endblock %}





