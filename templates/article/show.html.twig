{% extends 'base.html.twig' %}

{% block title %}{{ article.titre }}{% endblock %}

{% block body %}
<div class="article-show-page container py-5">
    <div class="article-card mb-5">
        {% if article.image %}
            <img src="{{ asset('uploads/articles/' ~ article.image) }}" alt="{{ article.titre }}" class="img-fluid mb-3">
        {% endif %}

        <h1>{{ article.titre }}</h1>
        <span class="badge bg-primary">{{ article.categorie }}</span>

        <p class="mt-3">{{ article.contenu|raw }}</p>

        <div class="article-footer mt-4 d-flex justify-content-between align-items-center text-muted">
            {# üíñ BOUTON LIKE ICI #}
            <div class="mb-3">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <button
            class="btn btn-outline-danger like-button"
            data-article-id="{{ article.id }}"
            data-url="{{ path('app_like_toggle', {'id': article.id}) }}"
        >
            ‚ù§Ô∏è <span class="like-count">{{ article.likes|length }}</span>
        </button>
    {% else %}
        <p><em><a href="{{ path('app_login') }}">Connecte-toi</a> pour liker cet article !</em></p>
    {% endif %}
    </div>

    {% if article.user %}
    R√©dig√© par 
    <a href="{{ path('app_public_profile', {'pseudo': article.user.pseudo}) }}" class="fw-bold text-decoration-none">
    <i class="bi bi-person-circle me-1"></i>{{ article.user.pseudo }}
    </a>


    {% if article.user.articles|length >= 10 %}
        <span class="badge bg-warning text-dark ms-2" title="Auteur confirm√©">üåü</span>
    {% elseif article.user.articles|length >= 1 %}
        <span class="badge bg-info text-white ms-2" title="Auteur d√©butant">‚úçÔ∏è</span>
    {% endif %}
    {% else %}
    R√©dig√© par un auteur disparu
    {% endif %}

    </div>
            <span><i class="bi bi-chat-fill"></i> {{ article.commentaires|length }} commentaires</span>
        </div>
    </div>
    
    <hr>

    <div class="comments-section mt-5">
        <h3>üí¨ Commentaires</h3>

        {% if commentaires is not empty %}
            <div class="list-group mt-4">
                {% for commentaire in commentaires %}
                    <div class="list-group-item">
                        <p class="mb-1">
    <strong>
        {% if commentaire.auteur %}
            {{ commentaire.auteur.email }}
        {% else %}
            Auteur supprim√©
        {% endif %}
    </strong>
    <span class="text-muted small">le {{ commentaire.dateCommentaire|date('d/m/Y H:i') }}</span>
    </p>

                        <p class="mb-0">{{ commentaire.contenu }}</p>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-muted mt-3">Aucun commentaire pour cet article pour le moment.</p>
        {% endif %}
    </div>

        <div class="text-center mt-4">
        <a href="{{ path('app_articles') }}" class="btn btn-secondary">‚Üê Retour aux articles</a>
    </div>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="text-center mt-2">
            <a href="{{ path('app_profile') }}" class="btn btn-outline-primary">
                üë§ Retour √† mon profil
            </a>
        </div>
    {% endif %}
    </div> {# fermeture de .article-show-page container #}
    {% endblock %}











