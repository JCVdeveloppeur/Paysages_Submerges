                                <p class="card-text">
                                    {{ article.contenu|length > 100 ? article.contenu|slice(0, 100) ~ '...' : article.contenu }}
                                </p>
                                <div class="d-flex flex-column gap-2 mt-3">
                                <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary">Lire la suite</a>
