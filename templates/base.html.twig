</head>
<body class="{% block body_class %}{% endblock %}">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top py-3">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_accueil') }}">Paysages Submerg√©s</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link text-white" href="{{ path('app_articles') }}">Articles</a></li>
                <li class="nav-item">
    <a class="nav-link text-white" href="{{ path('espece_public_index') }}">Esp√®ces</a>
                </li>
            </ul>

            <ul class="navbar-nav">
                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" id="navbarDropdown"
                           role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle me-1"></i> {{ app.user.pseudo ?? app.user.username }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="{{ path('app_profile') }}">
                                    <i class="bi bi-person-fill me-2"></i> Mon profil
                                </a>
                            </li>
                            {% if app.user.pseudo is not empty %}
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" href="{{ path('app_public_profile', {'pseudo': app.user.pseudo}) }}">
                                        <i class="bi bi-globe2 me-2"></i> Voir mon profil public
                                    </a>
                                </li>
                            {% endif %}
                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="{{ path('article_create') }}">
                                    <i class="bi bi-pencil-square me-2"></i> R√©diger un article
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="{{ path('app_change_password') }}">
                                    <i class="bi bi-lock-fill me-2"></i> Modifier mot de passe
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" href="{{ path('admin_dashboard') }}">
                                        <i class="bi bi-shield-lock me-2 text-warning"></i> Espace Admin
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                            {% endif %}

                            <li>
                                <a class="dropdown-item text-danger d-flex align-items-center" href="{{ path('app_logout') }}">
                                    <i class="bi bi-box-arrow-right me-2"></i> D√©connexion
                                </a>
                            </li>
                        </ul>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('app_register') }}">Inscription</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                {% endif %}
            </ul>

            <form class="d-flex ms-3" action="{{ path('app_articles') }}" method="get" role="search">
                <input class="form-control me-2" type="search" name="q" placeholder="üîç Rechercher‚Ä¶" value="{{ app.request.get('q') }}">
            </form>
        </div>
    </div>
</nav>

<div id="navbar-overlay"></div>

<main class="main-content pt-5 mt-4">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show m-3" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
</main>

<footer class="site-footer bg-dark text-light py-3 text-center mt-5">
    <small>&copy; {{ "now"|date("Y") }} Paysages Submerg√©s. Tous droits r√©serv√©s. |
        <a href="{{ path('app_contact') }}" class="text-light">Contact</a> |
        <a href="{{ path('app_mentions_legales') }}" class="text-light">Mentions l√©gales</a>
    </small>
</footer>

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script>
        document.addEventListener("scroll", () => {
            const hero = document.querySelector(".hero-zoom");
            if (!hero) return;

            const scrolled = window.scrollY;
            const zoomLevel = 100 + scrolled * 0.02;

            hero.style.backgroundSize = `${zoomLevel}%`;
        });

        document.addEventListener("DOMContentLoaded", () => {
            const hero = document.querySelector(".hero-zoom");
            if (hero && hero.dataset.bg) {
                hero.style.backgroundImage = `url('${hero.dataset.bg}')`;
            }
        });
    </script>
    {% endblock %}


<svg width="0" height="0">
  <defs>
    <mask id="stamp-mask" x="0" y="0" width="100%" height="100%" maskUnits="userSpaceOnUse">
      <rect x="0" y="0" width="100%" height="100%" fill="white"/>
      {% for x in 0..20 %}
        {% for y in 0..25 %}
          <circle cx="{{ x * 15 }}" cy="{{ y * 15 }}" r="4" fill="black"/>
        {% endfor %}
      {% endfor %}
    </mask>
  </defs>
</svg>

</body>
</html>





