<script>
    document.addEventListener("scroll", () => {
        const hero = document.querySelector(".hero-zoom");
        if (!hero) return;
        const scrolled = window.scrollY;
        const zoomLevel = 100 + scrolled * 0.02;
        hero.style.backgroundSize = `${zoomLevel}%`;
    });

    document.addEventListener("DOMContentLoaded", () => {
        const hero = document.querySelector(".hero-zoom");
        if (hero && hero.dataset.bg) {
            hero.style.backgroundImage = `url('${hero.dataset.bg}')`;
        }
    });
</script>
<script>
    window.addEventListener('load', function () {
        const splash = document.getElementById('splash-screen');
        if (splash) {
            setTimeout(() => {
                splash.style.display = 'none';
            }, 3500);
        }
    });
</script>

{# BULLES BANNIERE (conserv√©) #}
<script>
(function ready(run) {
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", () => run(), { once: true });
  } else {
    run();
  }
})(() => {
  const container = document.querySelector(".bubbles-container");
  if (!container) return;

  const bubbleCount = 22;
  container.innerHTML = "";

  for (let i = 0; i < bubbleCount; i++) {
    const bubble = document.createElement("div");
    bubble.classList.add("bubble");

    const size = 6 + Math.floor(Math.random() * 10);
    const left = Math.random() * 100;
    const delay = Math.random() * 5;
    const duration = 5 + Math.random() * 6;
    const blur = Math.random() * 3;

    bubble.style.width = `${size}px`;
    bubble.style.height = `${size}px`;
    bubble.style.left = `${left}%`;
    bubble.style.animationDelay = `${delay}s`;
    bubble.style.animationDuration = `${duration}s`;
    bubble.style.filter = `blur(${blur}px)`;

    container.appendChild(bubble);
  }
});
</script>

