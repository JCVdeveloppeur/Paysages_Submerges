{% extends 'base.html.twig' %}

{% block title %}Toutes les plantes{% endblock %}

{% block body %}

{# --- CONTEXTE RETOUR (article d'origine) --- #}
{% set returnUrl   = app.request.query.get('return') %}
{% set returnTitle = app.request.query.get('return_title') %}

{# Param√®tres actuels (biotope, nom, limit, page, etc.) #}
{% set baseParams = app.request.query.all %}

{# Force return/return_title dans les params si pr√©sents #}
{% if returnUrl %}
  {% set baseParams = baseParams|merge({
    return: returnUrl,
    return_title: returnTitle
  }) %}
{% endif %}

<div class="container my-5 plante-index">

    <h1 class="mb-2 text-center page-title">
    üåø Encyclop√©die des plantes aquatiques
    </h1>
    <p class="text-center page-subtitle mb-4">
    Un aper√ßu des plantes : position dans l'aquarium, √©clairage, difficult√© et caract√©ristiques cl√©s.
    </p>
    {% if currentBiotopeLabel %}
    <div class="d-flex justify-content-center align-items-center gap-2 mb-4 bio-context bio-{{ currentBiotope }}">
        <span class="badge badge-{{ currentBiotope }}">üåç {{ currentBiotopeLabel }}</span>

        {% if returnUrl %}
        <a class="btn-bio-reset"
            href="{{ returnUrl }}"
            title="{{ returnTitle ?? "Retour √† l'article" }}">
            ‚Üê Retour √† ¬´ {{ (returnTitle ?? "l'article")|slice(0,45) }}{{ (returnTitle and returnTitle|length > 45) ? '‚Ä¶' : '' }} ¬ª
        </a>
        {% else %}
        <a class="btn-bio-reset" href="{{ path('plante_public_index') }}">‚Ü∫ Tout voir</a>
        {% endif %}
    </div>
    {% endif %}

    {# Barre outils : recherche + select #}

    <div class="row justify-content-center mb-3 plante-toolbar">
    <div class="col-12 col-lg-10">
        <div class="d-flex flex-column flex-md-row align-items-stretch align-items-md-center gap-2">

        {# Recherche #}
        <form method="get" class="w-100 flex-grow-1 bloc-recherche-espece" id="recherche-plante-form">
            <input type="hidden" name="limit" value="{{ limit|default(6) }}">
            <input type="hidden" name="page" value="1">
            {% if currentBiotope %}
            <input type="hidden" name="biotope" value="{{ currentBiotope }}">
            {% endif %}

            {% if returnUrl %}
            <input type="hidden" name="return" value="{{ returnUrl }}">
            <input type="hidden" name="return_title" value="{{ returnTitle }}">
            {% endif %}

            <div class="position-relative">
            <input
                type="text"
                name="nom"
                value="{{ nom }}"
                class="form-control pe-5"
                placeholder="üåø Rechercher une plante‚Ä¶"
            >
            <button type="button" class="btn-clear-search" aria-label="Effacer la recherche" title="Effacer la recherche">
                ‚úï
            </button>
            </div>
        </form>

        {# Select afficher #}
        <form method="get" class="d-flex align-items-center justify-content-md-end gap-2 small text-muted flex-shrink-0">
            <input type="hidden" name="nom" value="{{ nom }}">
            <input type="hidden" name="page" value="1">
            {% if currentBiotope %}
            <input type="hidden" name="biotope" value="{{ currentBiotope }}">
            {% endif %}

            {% if returnUrl %}
            <input type="hidden" name="return" value="{{ returnUrl }}">
            <input type="hidden" name="return_title" value="{{ returnTitle }}">
            {% endif %}

            <label for="limit" class="mb-0">Afficher :</label>

            <select name="limit" id="limit" class="form-select form-select-sm" style="width:auto" onchange="this.form.submit()">
            <option value="6"  {{ limit == 6 ? 'selected' }}>6</option>
            <option value="9"  {{ limit == 9 ? 'selected' }}>9</option>
            <option value="12" {{ limit == 12 ? 'selected' }}>12</option>
            </select>
        </form>

        </div>
    </div>
    </div>

    {% if pagination.items is empty %}
    <div class="alert alert-info text-center mb-4">
        Aucune plante enregistr√©e pour le moment.
    </div>
    <div class="text-center">
        <a href="{{ path('app_plante_new') }}" class="btn btn-vert">
            ‚ûï Ajouter une plante
        </a>
    </div>
{% else %}

    <div class="paginated-content">
        <div id="plante-results" class="row row-cols-1 row-cols-md-3 g-4 results-animate">
            {% for plante in pagination %}
                <div class="col results-item">
                    <div class="card h-100 shadow-sm card-carnet card-carnet--large card-plante">
                        {% if plante.image %}
                            <img
                                src="{{ asset('uploads/plantes/' ~ plante.image) }}"
                                class="card-img-top image-carte"
                                alt="{{ plante.nomCommun }}"
                            >
                        {% else %}
                            <div class="card-img-top image-carte image-carte--placeholder">
                                <span>üåø</span>
                            </div>
                        {% endif %}

                        <div class="card-body">
                            <h5 class="card-title mb-1">
                                {{ plante.nomCommun|default('Nom non renseign√©') }}
                            </h5>

                            {% if plante.nomScientifique %}
                                <p class="card-subtitle text-muted">
                                    <em>{{ plante.nomScientifique }}</em>
                                </p>
                            {% endif %}

                            <p class="card-text mt-2 small">
                                {% if plante.description %}
                                    {% set desc = plante.description|striptags %}
                                    {{ desc|length > 120 ? desc|slice(0, 120) ~ '‚Ä¶' : desc }}
                                {% else %}
                                    <span class="text-muted">Description √† venir.</span>
                                {% endif %}
                            </p>

                            <ul class="list-unstyled small text-muted mb-0">
                                {% if plante.positionAquarium %}
                                    <li><strong>Position :</strong> {{ plante.positionAquarium }}</li>
                                {% endif %}
                                {% if plante.eclairage %}
                                    <li><strong>√âclairage :</strong> {{ plante.eclairage }}</li>
                                {% endif %}
                                {% if plante.difficulte %}
                                    <li><strong>Difficult√© :</strong> {{ plante.difficulte }}</li>
                                {% endif %}
                            </ul>
                        </div>

                        <div class="card-footer d-flex justify-content-end">
                        {% set qs = baseParams ? ('?' ~ baseParams|url_encode) : '' %}
                        <a href="{{ path('plante_public_show', { id: plante.id }) ~ qs }}"
                            class="btn btn-espece btn-sm">
                            üîç Voir la fiche
                        </a>
                        </div>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(pagination, null, {'query': baseParams}) }}
        </div>
    </div>

{% endif %}

</div>
{% endblock %}
