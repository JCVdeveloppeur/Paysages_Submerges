
{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container mt-5 profile-page">
    <h1 class="mb-4">üë§ Mon profil</h1>

    {{ form_start(form) }}

    <div class="row mb-4">
        <div class="col-md-3 text-center">
            <img id="avatarPreview"
                src="{{ asset('images/avatars/' ~ (user.avatar ?: 'default-avatar.png')) }}"
                alt="Avatar de {{ user.pseudo }}"
                class="rounded-circle img-fluid avatar-preview mb-3 shadow"
                style="width: 150px; height: 150px; object-fit: cover; cursor: pointer;"
                data-bs-toggle="modal"
                data-bs-target="#avatarModal">

                {{ form_widget(form.avatar, {'attr': {'id': 'avatarInput'}}) }}
            <div class="form-text">Cliquez sur l'avatar pour le modifier</div>
        </div>

        <div class="col-md-9">
            <div class="mb-3">
                {{ form_label(form.pseudo) }}
                {{ form_widget(form.pseudo, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.bio) }}
                {{ form_widget(form.bio, {'attr': {'class': 'form-control', 'rows': 4}}) }}
            </div>
        </div>
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-success">üíæ Enregistrer les modifications</button>
    </div>

    {{ form_end(form) }}

    <!-- Modal de s√©lection d'avatar -->
    <div class="modal fade" id="avatarModal" tabindex="-1" aria-labelledby="avatarModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Choisir un avatar</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        {% for avatar in avatars %}
                            <div class="col-3 col-sm-2 text-center mb-3">
                                <img src="{{ asset('images/avatars/' ~ avatar) }}"
                                     alt="Avatar {{ loop.index }}"
                                     class="avatar-choice img-thumbnail"
                                     style="cursor: pointer; width: 70px; height: 70px; object-fit: cover; border-radius: 50%; transition: transform 0.2s;"
                                     data-avatar="{{ avatar }}"
                                     onmouseover="this.style.transform='scale(1.2)'"
                                     onmouseout="this.style.transform='scale(1)'">
                            </div>
                        {% else %}
                            <p class="text-muted">Aucun avatar disponible pour le moment.</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5">

    <h2>üìä Mes statistiques</h2>
    <ul>
        <li><strong>{{ articles|length }}</strong> article(s) publi√©(s)</li>
        <li><strong>{{ totalLikes }}</strong> like(s) re√ßus</li>
        <li><strong>{{ nbCommentaires }}</strong> commentaire(s) post√©(s)</li>
    </ul>

    <div class="card mt-5 shadow-sm">
        <div class="card-body text-center">
            <h5 class="card-title">‚úçÔ∏è Pr√™t √† partager votre savoir ?</h5>
            <p class="card-text">R√©digez un nouvel article pour enrichir la communaut√© !</p>
            <a href="{{ path('app_article_new') }}" class="btn btn-vert mt-3">
                <i class="bi bi-pencil-square"></i> R√©diger un article
            </a>
        </div>
    </div>

    <hr class="my-5">
    <h2>üìù Mes articles</h2>

    {% if articles is empty %}
        <p class="text-muted">Vous n'avez pas encore r√©dig√© d'article.</p>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 g-4">
            {% for article in articles %}
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                {{ article.titre }}
                                {% if article.estApprouve %}
                                    <span class="badge bg-success ms-2">Valid√© ‚úÖ</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark ms-2">En attente ‚è≥</span>
                                {% endif %}
                            </h5>
                            <p class="card-text small text-muted">
                                Publi√© le {{ article.datePublication|date('d/m/Y') }}
                            </p>
                            <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-sm btn-outline-primary">
                                Voir l'article
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

</div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.avatar-choice').forEach(function (img) {
            img.addEventListener('click', function () {
                const selectedAvatar = this.dataset.avatar;
                const avatarInput = document.querySelector('input[name$="[avatar]"]'); // <-- ciblage dynamique
                const avatarPreview = document.getElementById('avatarPreview');
                const modalEl = document.getElementById('avatarModal');

                if (avatarInput) {
                    avatarInput.value = selectedAvatar;
                }
                if (avatarPreview) {
                    avatarPreview.src = this.src;
                }
                if (modalEl) {
                    const modal = bootstrap.Modal.getInstance(modalEl);
                    if (modal) modal.hide();
                }
            });
        });
    });
</script>

{% endblock %}









