{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.pseudo }}{% endblock %}

{% block body %}
<div class="container mt-5 public-profile-page">
    <div class="text-center mb-4">
        {% if user.avatar %}
            <img src="{{ asset('images/avatars/' ~ user.avatar) }}"
                 alt="Avatar de {{ user.pseudo }}"
                 class="rounded-circle avatar-public mb-3">
        {% else %}
            <img src="{{ asset('images/avatars/default-avatar.png') }}"
                 alt="Avatar par d√©faut"
                 class="rounded-circle avatar-public mb-3">
        {% endif %}

        <h1>{{ user.pseudo }}</h1>
        {% if user.bio %}
            <p class="text-muted">{{ user.bio }}</p>
        {% endif %}

        {% if user.articles|length >= 10 %}
            <span class="badge badge-valide bg-secondary"> Auteur r√©gulier</span>
        {% elseif user.articles|length >= 1 %}
            <span class="badge badge-auteur-occasionnel bg-secondary"> Auteur occasionnel</span>
        {% else %}
            <span class="badge badge-nouveau-venu bg-secondary"> Nouveau venu</span>
        {% endif %}
    </div>

    <hr>

    <div class="mb-4">
        <h2>üìù Articles de {{ user.pseudo }}</h2>

        {% if user.articles is not empty %}
            <div class="list-group">
                {% for article in user.articles %}
                    <a href="{{ path('app_article_show', {'id': article.id}) }}" class="list-group-item list-group-item-action">
                        <h5 class="mb-1">{{ article.titre }}</h5>
                        <small class="text-muted">Publi√© le {{ article.datePublication|date('d/m/Y') }}</small>
                    </a>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-muted">Cet utilisateur n'a pas encore publi√© d'articles.</p>
        {% endif %}
    </div>
</div>
{% endblock %}


