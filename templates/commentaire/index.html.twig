{% extends 'base.html.twig' %}

{% block title %}Liste des commentaires{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4 text-center">💬 Liste des commentaires</h1>

    <div class="text-end mb-4">
        <a href="{{ path('commentaire_new') }}" class="btn btn-success">➕ Ajouter un commentaire</a>
    </div>

    {% if commentaires is not empty %}
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th>ID</th>
                        <th>Auteur</th>
                        <th>Article</th>
                        <th>Contenu</th>
                        <th>Date</th>
                        <th>Approuvé</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for commentaire in commentaires %}
                        <tr>
                            <td class="text-center">{{ commentaire.id }}</td>
                            <td>
                                {{ commentaire.auteur ? commentaire.auteur.email : 'Auteur supprimé' }}
                            </td>
                            <td>{{ commentaire.article.titre }}</td>
                            <td>{{ commentaire.contenu|u.truncate(100, '...') }}</td>
                            <td>{{ commentaire.dateCommentaire|date('d/m/Y H:i') }}</td>
                            <td class="text-center">
                                {{ commentaire.approuve ? '✅' : '❌' }}
                            </td>
                            <td>
                                <div class="d-flex flex-wrap gap-1 justify-content-center">
                                    {% if not commentaire.approuve %}
                                        <form method="post" action="{{ path('commentaire_approve', {'id': commentaire.id}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ commentaire.id) }}">
                                            <button class="btn btn-success btn-sm" title="Approuver">✅</button>
                                        </form>
                                    {% endif %}

                                    <a href="{{ path('commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-outline-secondary btn-sm" title="Modifier">
                                        ✏️
                                    </a>

                                    <form method="post" action="{{ path('commentaire_delete', {'id': commentaire.id}) }}"
                                          onsubmit="return confirm('Voulez-vous vraiment supprimer ce commentaire ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commentaire.id) }}">
                                        <button class="btn btn-danger btn-sm" title="Supprimer">🗑</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-warning text-center">Aucun commentaire trouvé.</div>
    {% endif %}
</div>
{% endblock %}

