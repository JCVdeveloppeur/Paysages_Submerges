{% extends 'base.html.twig' %}

{% block title %}Détail du commentaire{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4 text-center">💬 Détail du commentaire</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <p><strong>ID :</strong> {{ commentaire.id }}</p>
            <p><strong>Auteur :</strong> {{ commentaire.auteur.email }}</p>
            <p><strong>Article associé :</strong> {{ commentaire.article.titre }}</p>
            <p><strong>Date :</strong> {{ commentaire.dateCommentaire ? commentaire.dateCommentaire|date('d/m/Y H:i') : 'Non renseignée' }}</p>
            <p><strong>Approuvé :</strong>
                {% if commentaire.approuve %}
                    ✅ Oui
                {% else %}
                    ❌ Non
                {% endif %}
            </p>
            <p><strong>Contenu :</strong></p>
            <div class="border p-3 rounded bg-light">
                {{ commentaire.contenu|nl2br }}
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-warning">✏️ Modifier</a>
            <div>
                {{ include('commentaire/_delete_form.html.twig', {'commentaire': commentaire}) }}
                <a href="{{ path('commentaire_index') }}" class="btn btn-secondary">← Retour à la liste</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
