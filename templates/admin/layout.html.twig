
{% extends 'base.html.twig' %}

{% set body_class = (body_class|default('') ~ ' admin')|trim %}

{# <title> de lâ€™onglet #}
{% block title %}{% block page_title %}Administration{% endblock %}{% endblock %}

{# Contenu principal #}
{% block body %}
  <div class="container py-5 admin-container">

    <h1 class="mb-4">
      {% block page_heading %}{% endblock %}
    </h1>

    {% for label, messages in app.flashes %}
      {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
          {{ message }}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      {% endfor %}
    {% endfor %}

    <main class="admin-glass">
      {% block content %}{% endblock %}
    </main>
  </div>
  
  {% include '_partials/_delete_modal_glass.html.twig' %}

{% endblock %}


{# JS additionnel des pages enfants (graphiques, etc.) #}
{% block javascripts %}
  {{ parent() }}
  {% block extra_js %}{% endblock %}
{% endblock %}
