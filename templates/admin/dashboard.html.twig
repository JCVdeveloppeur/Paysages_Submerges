{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Admin{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4"><i class="bi bi-speedometer2"></i> Tableau de bord administrateur</h1>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card border-primary shadow-sm text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-journal-text"></i> Articles
                        <span class="badge bg-primary">{{ nombreArticles }}</span>
                    </h5>
                    <p class="card-text text-muted">Nombre total d'articles publiés.</p>
                    <a href="{{ path('admin_articles_all') }}" class="btn btn-outline-primary w-100">Voir les articles</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-success shadow-sm text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-check-circle"></i> Modération
                        <span class="badge bg-success">{{ articlesEnAttente }}</span>
                    </h5>
                    <p class="card-text text-muted">Articles en attente de validation.</p>
                    <a href="{{ path('admin_articles_moderation') }}" class="btn btn-outline-success w-100">Modérer</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-dark shadow-sm text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-people"></i> Utilisateurs
                        <span class="badge bg-dark">{{ nombreUtilisateurs }}</span>
                    </h5>
                    <p class="card-text text-muted">Nombre total d'utilisateurs inscrits.</p>
                    <a href="{{ path('admin_users') }}" class="btn btn-outline-dark w-100">Voir les utilisateurs</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-info shadow-sm text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-chat-dots"></i> Interactions
                        <span class="badge bg-info text-dark">{{ nombreCommentaires + nombreLikes }}</span>
                    </h5>
                    <p class="card-text text-muted">
                        Commentaires ({{ nombreCommentaires }}) & Likes ({{ nombreLikes }})<br>
                        <strong>Aujourd'hui</strong> : Commentaires {{ commentairesAujourdHui }} / Likes {{ likesAujourdHui }}<br>
                        <strong>7 derniers jours</strong> : Commentaires {{ commentaires7Jours }} / Likes {{ likes7Jours }}
                    </p>
                    <a href="{{ path('admin_interactions') }}" class="btn btn-info text-white w-100">Modérer</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col">
            <div class="card border-info shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-graph-up"></i> Évolution des interactions (7 derniers jours)</h5>
                    <canvas id="interactionChart" height="120"></canvas>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5">

    <div class="text-center">
        <a href="{{ path('article_create') }}" class="btn btn-success btn-lg">
            ✍️ Rédiger un nouvel article
        </a>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module">
        import Chart from 'chart.js/auto';

        const ctx = document.getElementById('interactionChart').getContext('2d');

        const data = {
            labels: {{ jours|json_encode|raw }},
            datasets: [
                {
                    label: 'Commentaires',
                    data: {{ commentairesParJour|json_encode|raw }},
                    backgroundColor: 'rgba(54, 162, 235, 0.5)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1,
                    tension: 0.3
                },
                {
                    label: 'Likes',
                    data: {{ likesParJour|json_encode|raw }},
                    backgroundColor: 'rgba(255, 99, 132, 0.5)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1,
                    tension: 0.3
                }
            ]
        };

        const config = {
            type: 'line',
            data: data,
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            precision: 0
                        }
                    }
                }
            }
        };

        new Chart(ctx, config);
    </script>
{% endblock %}




