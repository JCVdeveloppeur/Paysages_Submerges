{% extends 'base.html.twig' %}

{% block title %}Mod√©ration des articles{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4"><i class="bi bi-eye-slash"></i> Mod√©ration des articles</h1>

    {% if articles is empty %}
        <div class="alert alert-info">
            Aucun article en attente de mod√©ration pour le moment.
        </div>
    {% else %}
        <div class="row g-4">
            {% for article in articles %}
                <div class="col-md-6">
                    <div class="card h-100 border-warning shadow-sm mb-3">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.titre }}</h5>
                            <p class="card-text propose-par">
                                Propos√© par :
                                {% if article.user %}
                                    {{ article.user.pseudo ?: article.user.email }}
                                {% else %}
                                    Auteur inconnu
                                {% endif %}
                            </p>

                            <p class="card-text">{{ article.contenu|striptags|slice(0, 100) ~ '...' }}</p>

                            <div class="d-flex justify-content-between align-items-center mt-3 flex-wrap gap-2">

                            <a href="{{ path('admin_article_show', {'id': article.id}) }}" class="btn btn-admin-modifier btn-sm">
                                üìñ Lire
                            </a>

                            <form method="post" action="{{ path('admin_article_approve', {'id': article.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ article.id) }}">
                                <button class="btn btn-approve btn-sm">‚úÖ Approuver</button>
                            </form>

                            <form method="post" action="{{ path('admin_article_delete', {'id': article.id}) }}" onsubmit="return confirm('Supprimer cet article ?')">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                <button class="btn btn-admin-supprimer btn-sm">üóëÔ∏è Supprimer</button>
                            </form>

                        </div>

                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <div class="mt-5 text-center">
        <a href="{{ path('admin_articles_all') }}" class="btn-admin-retour mt-4">
            <i class="bi bi-arrow-left"></i> Retour au tableau de bord
        </a>

    </div>
</div>
{% endblock %}

