{% extends 'admin/layout.html.twig' %}

{% block page_title %}Tous les articles{% endblock %}
{% block page_heading %}<i class="bi bi-file-earmark-text me-2"></i> Tous les articles publiés{% endblock %}

{% block content %}
  <div class="admin-surface">

    <div class="admin-surface__head">
      <h3 class="mb-0">
        <i class="bi bi-file-earmark-text me-2"></i>
        Tous les articles publiés
      </h3>

      <div class="admin-surface__actions">
        <a href="{{ path('app_article_new') }}" class="btn-admin-ajouter">
          <i class="bi bi-plus-circle me-2"></i>
          Nouvel article
        </a>

        <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-light">
          <i class="bi bi-speedometer2 me-2"></i> Tableau de bord
        </a>
      </div>
    </div>

      {# ===== Body ===== #}

        <div class="admin-surface__body">

            {% if articles is empty %}
                <div class="alert alert-info mb-0">
                    Aucun article pour le moment.
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table admin-table-glass align-middle">
                        <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Auteur</th>
                                <th>Date création</th>
                                <th>Statut</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for article in articles %}
                                <tr>
                                    <td>{{ article.titre }}</td>
                                    <td>
                                        {% if article.user %}
                                            {{ article.user.pseudo ?? article.user.email }}
                                        {% else %}
                                            <em class="text-muted">Auteur inconnu</em>
                                        {% endif %}
                                    </td>
                                    <td>{{ article.dateCreation|date('d/m/Y H:i') }}</td>
                                    <td>
                                    {% include 'admin/_status_badge.html.twig' with {
                                        status: article.statut
                                    } %}
                                    </td>
                                    <td class="text-end">
                                    {% include 'admin/_actions_row.html.twig' with {
                                        edit_path: path('article_edit', { id: article.id }),
                                        delete_path: path('admin_article_delete', { id: article.id }),
                                        csrf_token_id: 'delete' ~ article.id,

                                        delete_kind: 'article',
                                        delete_kicker: "Suppression d'article",
                                        delete_title: "Supprimer l'article ?",
                                        delete_subtitle: "Cette fiche ne sera plus accessible.",
                                        delete_body: "Vous êtes sûr de vouloir supprimer : <strong>" ~ (article.titre|default("cet article"))|e('html_attr') ~ "</strong> ?"
                                    } %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}

        </div>

        {# ===== Footer ===== #}
        <div class="admin-surface__foot d-flex justify-content-between align-items-center flex-wrap gap-3">

            {{ knp_pagination_render(
                articles,
                '@KnpPaginator/Pagination/bootstrap5_v5_pagination.html.twig'
            ) }}
        </div>

    </div>
</div>
{% endblock %}


