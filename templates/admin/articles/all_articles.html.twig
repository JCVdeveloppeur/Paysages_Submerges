{% extends 'base.html.twig' %}

{% block title %}Tous les articles{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4"><i class="bi bi-file-earmark-text"></i> Tous les articles publi√©s</h1>

    {% if articles is empty %}
        <div class="alert alert-info">
            Aucun article pour le moment.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Date cr√©ation</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                        <tr>
                            <td>{{ article.titre }}</td>
                            <td>
                                {% if article.user %}
                                    {{ article.user.pseudo ?? article.user.email }}
                                {% else %}
                                    <em class="text-muted">Auteur inconnu</em>
                                {% endif %}
                            </td>
                            <td>{{ article.dateCreation|date('d/m/Y H:i') }}</td>
                            <td>
                                {% if article.statut == 'publi√©' %}
                                    <span class="badge bg-success">Publi√©</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark">{{ article.statut }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <form method="post" action="{{ path('admin_article_delete', { id: article.id }) }}"
                                      onsubmit="return confirm('Supprimer cet article ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete-article-' ~ article.id) }}">
                                    <button class="btn btn-sm btn-outline-danger" title="Supprimer">üóëÔ∏è</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(articles, '@KnpPaginator/Pagination/bootstrap5_v5_pagination.html.twig') }}
        </div>
    {% endif %}

    <div class="mt-4">
        <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-secondary">‚Üê Retour au tableau de bord</a>
    </div>
</div>
{% endblock %}

