{% extends 'base.html.twig' %}

{% block title %}Tous les articles{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4"><i class="bi bi-file-earmark-text"></i> Tous les articles publiés</h1>

    {% if articles is empty %}
        <div class="alert alert-info">
            Aucun article pour le moment.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Date création</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                        <tr>
                            <td>{{ article.titre }}</td>
                            <td>
                                {% if article.user %}
                                    {{ article.user.pseudo ?? article.user.email }}
                                {% else %}
                                    <em class="text-muted">Auteur inconnu</em>
                                {% endif %}
                            </td>
                            <td>{{ article.dateCreation|date('d/m/Y H:i') }}</td>
                            <td>
                                {% if article.statut == 'publié' %}
                                    <span class="badge badge-publie">Publié</span>
                                {% elseif article.statut == 'brouillon' %}
                                    <span class="badge badge-brouillon">Brouillon</span>
                                {% else %}
                                    <span class="badge badge-attente">{{ article.statut }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <form method="post" action="{{ path('admin_article_delete', { id: article.id }) }}"
                                    onsubmit="return confirm('Supprimer cet article ?');" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete-article-' ~ article.id) }}">
                                    <button type="submit" class="btn-admin-supprimer" title="Supprimer">
                                    <i class="bi bi-trash3"></i> Supprimer
                                </button>
                                </form>
                            </td>

                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(articles, '@KnpPaginator/Pagination/bootstrap5_v5_pagination.html.twig') }}
        </div>
    {% endif %}

    <div class="mt-4">
        <a href="{{ path('admin_dashboard') }}" class="btn-admin-retour">
            <i class="bi bi-arrow-left-circle"></i> Retour au tableau de bord
        </a>


    </div>
</div>
{% endblock %}

