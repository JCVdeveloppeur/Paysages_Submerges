{% extends 'dashboard.html.twig' %}

{% block title %}Gestion des blocs de page{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4"><i class="bi bi-blockquote-left"></i> Blocs de page</h1>

    <div class="mb-3">
        <a href="{{ path('admin_pageblock_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nouveau bloc
        </a>
    </div>

    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Slug</th>
                <th>Titre</th>
                <th>Mis Ã  jour</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for block in blocks %}
            <tr>
                <td><code>{{ block.slug }}</code></td>
                <td>{{ block.title ?: '-' }}</td>
                <td>{{ block.updatedAt ? block.updatedAt|date('d/m/Y H:i') : '-' }}</td>
                <td class="text-end">
                    <a href="{{ path('admin_pageblock_edit', {id: block.id}) }}" class="btn btn-sm btn-primary">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>
                    <form method="post" action="{{ path('admin_pageblock_delete', {id: block.id}) }}" style="display:inline-block" onsubmit="return confirm('Supprimer ce bloc ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ block.id) }}">
                        <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center text-muted">Aucun bloc pour le moment.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
