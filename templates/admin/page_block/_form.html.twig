
<div class="admin-surface">

  <div class="admin-surface__head">
    <h3 class="mb-0">
      <i class="bi bi-blockquote-left me-2"></i>
      {{ button_label|default('Enregistrer') == 'Cr√©er' ? 'Nouveau bloc' : 'Modifier le bloc' }}
    </h3>

    <div class="d-flex gap-2">
      <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-light btn-sm">
        <i class="bi bi-arrow-left-circle me-2"></i> Tableau de bord
      </a>

      <a href="{{ path('admin_page_block_list') }}" class="btn btn-outline-light btn-sm">
        <i class="bi bi-list-ul me-2"></i> Liste
      </a>
    </div>
  </div>

  <div class="admin-surface__body">

    {# Erreurs globales #}
    {% if form.vars.errors|length %}
      <div class="alert alert-danger mb-3">
        {{ form_errors(form) }}
      </div>
    {% endif %}

    {{ form_start(form, { attr: { class: 'admin-form-glass' } }) }}

      <div class="row g-3">

        <div class="col-md-6">
          {{ form_label(form.slug, 'Identifiant unique (slug)') }}
          {{ form_widget(form.slug, { attr: { class: 'form-control' } }) }}
          <div class="form-text">
            Exemple : <code>accueil-apropos</code> (sans espaces)
          </div>
          {{ form_errors(form.slug) }}
        </div>

        <div class="col-md-6">
          {{ form_label(form.title, 'Titre (facultatif)') }}
          {{ form_widget(form.title, { attr: { class: 'form-control' } }) }}
          {{ form_errors(form.title) }}
        </div>

        <div class="col-12">
          {{ form_label(form.content, 'Contenu') }}
          {{ form_widget(form.content, { attr: { class: 'form-control', rows: 12 } }) }}
          {{ form_errors(form.content) }}
        </div>

      </div>

      <div class="d-flex justify-content-end gap-2 mt-4">
        <a href="{{ path('admin_page_block_list') }}" class="btn-admin-retour">
          <i class="bi bi-x-circle"></i> Annuler
        </a>

        <button class="btn-admin-ajouter">
          <i class="bi bi-save"></i> {{ button_label|default('Enregistrer') }}
        </button>
      </div>

    {{ form_end(form) }}

  </div>

</div>



