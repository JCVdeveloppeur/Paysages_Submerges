{# Erreurs globales #}
{% if form.vars.errors|length %}
  <div class="alert alert-danger mb-3">
    {{ form_errors(form) }}
  </div>
{% endif %}

{{ form_start(form) }}

  <div class="mb-3">
    {{ form_label(form.nomCommun, 'Nom commun') }}
    {{ form_widget(form.nomCommun, { attr: { class: 'form-control' } }) }}
    {{ form_errors(form.nomCommun) }}
  </div>

  <div class="mb-3">
    {{ form_label(form.nomScientifique, 'Nom scientifique') }}
    {{ form_widget(form.nomScientifique, { attr: { class: 'form-control' } }) }}
    {{ form_errors(form.nomScientifique) }}
  </div>

  {# Le reste des champs (classification, origine, imageFile, etc.) #}
  {{ form_rest(form) }}

  <div class="d-flex gap-2 mt-3">
    <button class="btn btn-bleu-profil">
      <i class="bi bi-save"></i> {{ button_label|default('Enregistrer') }}
    </button>

    <a href="{{ path('admin_espece_list') }}" class="btn btn-pastel">
      <i class="bi bi-x-circle"></i> Annuler
    </a>
  </div>

{{ form_end(form) }}

