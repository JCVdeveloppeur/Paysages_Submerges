{% extends 'base.html.twig' %}

{% block title %}Toutes les esp√®ces{% endblock %}

{% block body %}
    <div class="container my-5">
    <h1 class="mb-4 text-center">üåø Encyclop√©die des esp√®ces</h1>

    {# --- Formulaire de recherche --- #}
    <div class="row justify-content-center mb-4 bloc-recherche-espece">
    <div class="col-md-6">
        {{ form_start(form, {'method': 'GET', 'attr': {'id': 'recherche-espece-form'}}) }}
            {{ form_widget(form.nom, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'üîç Rechercher une esp√®ce‚Ä¶',
                    'onchange': 'this.form.submit();'
                }
            }) }}
        {{ form_end(form) }}
    </div>
    </div>

    {# --- R√©sultats --- #}
    {% if pagination.items is empty %}
        <div class="alert alert-info text-center">Aucune esp√®ce trouv√©e.</div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for espece in pagination %}
                <div class="col">
                    <div class="card h-100 shadow-sm card-espece">
                        {% if espece.imageName %}
                            <img src="{{ asset('uploads/especes/' ~ espece.imageName) }}" class="card-img-top image-carte" alt="{{ espece.nomCommun }}">
                        {% endif %}

                        <div class="card-body">
                            <h5 class="card-title">{{ espece.nomCommun|default('Nom inconnu') }}</h5>
                            <p class="card-text text-muted">
                                <em>{{ espece.nomScientifique|default('Non renseign√©') }}</em><br>
                                Type : {{ espece.typeEspece|default('‚Äî') }}<br>
                                Biotope : {{ espece.biotope|default('‚Äî') }}
                            </p>
                        </div>
                        <div class="card-footer text-end bg-light">
                            <a href="{{ path('espece_public_show', { id: espece.id }) }}" class="btn btn-outline-primary btn-sm">
                                üîç Voir la fiche
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% endif %}
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const input = document.querySelector("#{{ form.nom.vars.id }}");
            const form = document.querySelector("#recherche-espece-form");

            if (input && form) {
                input.addEventListener("input", () => {
                    if (input.value.trim() === "") {
                        form.submit();
                    }
                });
            }
        });
    </script>
{% endblock %}




