{% extends 'base.html.twig' %}

{% set body_class = 'degrade-aquatique-body' %}

{% block title %}Liste des espèces{% endblock %}

{% block body %}
<div class="container degrade-bloc mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Toutes les espèces</h1>
        <a href="{{ path('espece_new') }}" class="btn btn-success">+ Ajouter une espèce</a>
    </div>

    {% if pagination is empty %}
        <div class="alert alert-info">Aucune espèce enregistrée pour le moment.</div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Nom commun</th>
                        <th>Nom scientifique</th>
                        <th>Type</th>
                        <th>Biotope</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for espece in pagination %}
                        <tr>
                            <td>{{ espece.nomCommun }}</td>
                            <td><em>{{ espece.nomScientifique }}</em></td>
                            <td>{{ espece.typeEspece|default('—') }}</td>
                            <td>{{ espece.biotope|default('—') }}</td>
                            <td class="text-end">
                                <a href="{{ path('espece_show', {id: espece.id}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                                <a href="{{ path('espece_edit', {id: espece.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                                {{ include('espece/_delete_form.html.twig', { espece: espece }) }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% endif %}
</div>
{% endblock %}


