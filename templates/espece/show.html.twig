{% extends 'base.html.twig' %}

{% block title %}Fiche espèce - {{ espece.nomCommun }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="fiche-espece container">

    <h1>{{ espece.nomCommun }}</h1>
    <em>{{ espece.nomScientifique }}</em>

    {% if espece.image %}
        <div class="image-espece my-4"
             style="background-image: url('{{ asset('uploads/especes/' ~ espece.image) }}');">
        </div>
    {% endif %}

    <div class="section">
        <h2 class="physique">Description physique</h2>
        <p>{{ espece.descriptionPhysique|nl2br }}</p>
    </div>

    <div class="section">
        <h2 class="comportement">Comportement</h2>
        <p>{{ espece.comportement|nl2br }}</p>
    </div>

    <div class="section">
        <h2 class="alimentation">Alimentation</h2>
        <p>{{ espece.alimentation|nl2br }}</p>
    </div>

    <div class="section">
        <h2 class="reproduction">Reproduction</h2>
        <p>{{ espece.reproduction|nl2br }}</p>
    </div>

    <div class="row">
        <div class="col-md-6 parametres-eau">
            <h2 class="eau">Paramètres de l'eau</h2>
            <ul>
                <li>Température : {{ espece.temperatureMin ?? 'N/A' }} - {{ espece.temperatureMax ?? 'N/A' }} °C</li>
                <li>pH : {{ espece.phMin ?? 'N/A' }} - {{ espece.phMax ?? 'N/A' }}</li>
                <li>GH : {{ espece.ghMin ?? 'N/A' }} - {{ espece.ghMax ?? 'N/A' }}</li>
            </ul>
        </div>

        <div class="col-md-6 infos-complementaires">
            <h2 class="infos">Informations complémentaires</h2>
            <ul>
                <li>Taille minimale du bac : {{ espece.tailleMinimaleBac ?? 'N/A' }} L</li>
                <li>Durée de vie : {{ espece.dureeVie ?? 'N/A' }} ans</li>
                <li>Biotope : {{ espece.biotope ?? 'N/A' }}</li>
                <li>Type d'espèce : <span class="badge-type">{{ espece.typeEspece ?? 'N/A' }}</span></li>
            </ul>
        </div>
    </div>

    <a href="{{ path('espece_public_index') }}" class="btn btn-retour mt-4">
        ← Retour à la liste des espèces
    </a>
</div>
{% endblock %}




